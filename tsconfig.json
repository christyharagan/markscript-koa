{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./test/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/index.ts",
        "./lib/server.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/rx/rx-lite.d.ts",
        "./typings/rx/rx.d.ts",
        "./typings/socket.io/socket.io.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/koa-rx-router/rxRouter.d.ts",
        "./node_modules/markscript-uservices/markscript-uservices.d.ts",
        "./node_modules/markscript/markscript.d.ts",
        "./node_modules/ml-admin/ml-admin.d.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts",
        "./node_modules/speckle/speckle.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts",
        "./node_modules/uservices-socket.io-server/uservices-socket.io-server.d.ts",
        "./node_modules/uservices/uservices.d.ts"
    ]
}
