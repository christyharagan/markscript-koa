{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "outDir": ".",
        "moduleResolution": "node"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules/marklogic-node-typescript-definitions/typings",
        "node_modules/koa-rx-router",
        "node_modules/markscript-core",
        "node_modules/markscript-uservices",
        "node_modules/uservices",
        "node_modules/uservices-socket.io-server"
    ]
}
